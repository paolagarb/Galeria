@model Galeria.Models.Foto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar";
}
<div class="div-foto-detalhes mt-3">
    <div>
        <img src="/Fotos/Imagem/@Model.Id" alt="Foto" />
    </div>
    <form asp-action="Edit" asp-controller="Fotos" method="post">
        <input type="hidden" value="@Model.Id" name="id" />
        <div class="d-flex flex-column div-detalhes-edit">
            <div>
                <label class="control-label">Descrição:</label>
                <input type="text" value="@ViewBag.Descricao" class="mt-3" name="descricao" />
            </div>
            <div>
                <label class="control-label">Legenda:</label>
                <input type="text" value="@ViewBag.Legenda" class="mt-3" name="legenda" />
            </div>
            <div class="mt-3">
                <label class="control-label">Álbum:</label>
                <select asp-items="@ViewBag.Album" name="album"></select>
            </div>
            <div>
                <label class="control-label">Capa:</label>
                <input type="checkbox" value="@ViewBag.Capa" name="capa" id="checkbox-capa"/>
            </div>
            <div>
                <input type="submit" value="Alterar" class="btn btn-outline-primary mt-3" />
            </div>
        </div>
    </form>
</div>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
