@model Galeria.Models.Foto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Deletar";
}

<h3 class="text-center m-3">Tem certeza que deseja deletar essa foto?</h3>

<div class="text-center mt-3">
    <div class="div-foto-detalhes">
        <img src="/Fotos/Imagem/@Model.Id" alt="Foto" />
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger w-25 mt-3" />
    </form>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.Id">&larr; Voltar</a>
</div>