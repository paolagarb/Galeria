@{
    Layout = "_Layout";
    ViewData["Title"] = "Álbum";
}
<div class="d-flex justify-content-between">
    <h1 class="mt-3">@ViewBag.AlbumNome</h1>
    <div>
        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@ViewBag.AlbumId">Alterar</a>
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@ViewBag.AlbumId">Deletar</a>
    </div>
</div>

<div class="grid mt-3" data-masonry='{ "itemSelector": ".grid-item", "columnWidth": 200 }'>
    @foreach (var foto in ViewBag.FotosId)
    {
        <div class="grid-item">
            <a asp-action="Details" asp-controller="Fotos" asp-route-id="@foto">
                <img src="/Fotos/Imagem/@foto" alt="Foto" />
            </a>
        </div>
    }
</div>